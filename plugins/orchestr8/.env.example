# orchestr8 MCP Server Configuration

# Path to prompts directory (defaults to ./prompts)
PROMPTS_PATH=./prompts

# Path to resources directory (defaults to ./resources)
RESOURCES_PATH=./resources

# Cache size for prompt/resource content (defaults to 100)
CACHE_SIZE=100

# Log level: debug, info, warn, error (defaults to info)
LOG_LEVEL=info

# Node environment: development, production (defaults to development)
NODE_ENV=development

# HTTP server port (defaults to 1337)
ORCHESTR8_HTTP_PORT=1337

# ============================================================================
# Remote Resource Provider Configuration
# ============================================================================

# AITMPL Provider Configuration
# ------------------------------------------------------------------------------
# Enable/disable the AITMPL resource provider
ORCHESTR8_AITMPL_ENABLED=true

# AITMPL API URL (defaults to https://api.aitmpl.com)
ORCHESTR8_AITMPL_API_URL=https://api.aitmpl.com

# Cache TTL in milliseconds (defaults to 3600000 = 1 hour)
ORCHESTR8_AITMPL_CACHE_TTL=3600000

# Request timeout in milliseconds (defaults to 30000 = 30 seconds)
ORCHESTR8_AITMPL_TIMEOUT=30000

# Number of retry attempts for failed requests (defaults to 3)
ORCHESTR8_AITMPL_RETRY_ATTEMPTS=3

# GitHub Provider Configuration
# ------------------------------------------------------------------------------
# Enable/disable the GitHub resource provider
ORCHESTR8_GITHUB_ENABLED=false

# GitHub personal access token or OAuth token
# Required for private repositories and higher rate limits
# ORCHESTR8_GITHUB_TOKEN=ghp_your_token_here

# Type of GitHub token: personal or oauth (defaults to personal)
# ORCHESTR8_GITHUB_TOKEN_TYPE=personal

# Comma-separated list of GitHub repositories to fetch resources from
# Format: owner/repo,owner/repo
# ORCHESTR8_GITHUB_REPOS=username/repo1,username/repo2

# Branch to fetch resources from (defaults to main)
ORCHESTR8_GITHUB_BRANCH=main

# Cache TTL in milliseconds (defaults to 3600000 = 1 hour)
ORCHESTR8_GITHUB_CACHE_TTL=3600000

# Custom Provider Configuration
# ------------------------------------------------------------------------------
# Enable/disable custom resource providers
ORCHESTR8_CUSTOM_ENABLED=false

# Note: Custom endpoints are configured via config files (.orchestr8rc.json)
# See documentation for endpoint configuration format

# Provider Defaults
# ------------------------------------------------------------------------------
# Default priority for provider selection (defaults to 100)
ORCHESTR8_PROVIDER_PRIORITY=100

# Default cache TTL in milliseconds (defaults to 3600000 = 1 hour)
ORCHESTR8_PROVIDER_CACHE_TTL=3600000

# Default request timeout in milliseconds (defaults to 30000 = 30 seconds)
ORCHESTR8_PROVIDER_TIMEOUT=30000

# Default number of retry attempts (defaults to 3)
ORCHESTR8_PROVIDER_RETRY_ATTEMPTS=3
